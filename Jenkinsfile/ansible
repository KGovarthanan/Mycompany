pipeline {
    agent {label "jenkins-agent"}
    
    environment {
        playbookPath = "/var/lib/jenkins/workspace/${JOB_NAME}/Ansible/Dev/APP/apache.yml"
        inventoryPath = "/var/lib/jenkins/workspace/${JOB_NAME}/Ansible/Dev/inventory.ini"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Deploying') {
            steps {
                sh '''
                sudo -u ansible ansible-playbook -i ${inventoryPath} ${playbookPath}
                '''
            }
        }
    }
    
    post {
        success {
            echo "Ansible playbook executed successfully"
        }
        failure {
            echo "Ansible playbook execution failed"
        }
    }
}
