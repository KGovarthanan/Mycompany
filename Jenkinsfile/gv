pipeline {
    agent {label "jenkins-agent"}

    stages {
        stage('job-1') {
            steps {
                checkout scm
            }
        }
        stage('deploy') {
            steps {
                sh '''
                yes | sudo yum install httpd
                sudo systemctl start httpd
                sudo cp /var/lib/jenkins/workspace/${JOB_NAME}/index.html /var/www/html/ 
                '''
            }
        }
    }
}
